<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="35dp"
    android:background="@drawable/fondo">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App de Inventario"
                android:fontFamily="@font/nunito_regular"
                android:textStyle="bold"
                android:textColor="@color/dark"
                android:textSize="24dp"
                android:layout_marginBottom="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTodos"
                android:drawableStart="@drawable/ic_list"
                android:paddingHorizontal="20dp"
                android:drawablePadding="10dp"
                android:background="@drawable/gradiente"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mostrar todos los artículos"
                android:fontFamily="@font/nunito_semibold"
                android:layout_marginBottom="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCategoria"
                android:background="@drawable/gradiente"
                android:drawableStart="@drawable/ic_filter"
                android:paddingHorizontal="20dp"
                android:drawablePadding="10dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Filtrar por categoría"
                android:layout_marginBottom="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCodigo"
                android:background="@drawable/gradiente"
                android:drawableStart="@drawable/ic_maximize"
                android:paddingHorizontal="20dp"
                android:drawablePadding="10dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:fontFamily="@font/nunito_semibold"
                android:layout_height="wrap_content"
                android:text="Escanear código de barras"
                android:layout_marginBottom="20dp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegistrar"
                android:background="@drawable/gradiente"
                android:drawableStart="@drawable/ic_plus"
                android:paddingHorizontal="20dp"
                android:drawablePadding="10dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:fontFamily="@font/nunito_semibold"
                android:layout_height="wrap_content"
                android:text="Registrar nuevo artículo" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>